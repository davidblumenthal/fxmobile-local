<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
    xmlns:gap = "http://phonegap.com/ns/1.0"
    id        = "com.blumenthal.fxmobile"
    versionCode="5"
    version   = "0.0.1">
  <name>Local Online Banking</name>
  <description>
    Test FirstData fxMobile in PhoneGap - Local Files
  </description>

  <author href="http://blumenthal.com" email="phonegap@blumenthal.com">
    David Blumenthal
  </author>

   <gap:platforms>
       <gap:platform name="android" minVersion="2.1" />
       <gap:platform name="ios" />
   </gap:platforms>
   
  <preference name="phonegap-version" value="3.1.0" />
  <preference name="android-minSdkVersion" value="7" />
  
  <!-- If you do not want any permissions to be added to your app, add the
    following tag to your config.xml; you will still have the INTERNET
    permission on your app, which PhoneGap requires. -->
  <!-- preference name="permissions" value="none"/ -->
  
  <!-- Core plugins -->
  <gap:plugin name="org.apache.cordova.network-information" />

  <icon src="icon.png" />
  <gap:splash src="images/large.png" />
  <preference name="exit-on-suspend" value="true" />
  <content src="index.html" />
  
  <feature name="http://api.phonegap.com/1.0/network"/>
  
  <!--
    Define access to external domains.

    <access /> - a blank access tag denies access to all external resources.
    <access origin="*" /> - a wildcard access tag allows access to all external resource.

    Otherwise, you can specify specific domains:
  -->
    <access origin="*"/> <!-- allow pages -->

  <!-- See http://build.phonegap.com/docs/config-xml for more details -->
</widget>
